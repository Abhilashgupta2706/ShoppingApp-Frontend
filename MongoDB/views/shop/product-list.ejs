<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length> 0) { %>
                    <div class="container">
                        <% for (let product of prods) { %>
                            <div class="card">
                                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="card-title">
                                            <h4>
                                                <%= product.title %>
                                            </h4>
                                            <h3>$<%= product.price %>
                                            </h3>
                                        </div>

                                    </div>
                                    <hr />
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                    <div class="btn-group">
                                        <div>
                                            <%- include('../includes/add-to-cart.ejs', {product:product}) %>
                                        </div>
                                        <div>
                                            <a class="btn" href="/products/<%= product._id %>">Detail</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% } %>
                    </div>
                    
                    <%- include('../includes/pagination.ejs', {currentPage: currentPage, hasNextPage: hasNextPage,
                        hasPreviousPage: hasPreviousPage, nextPage: nextPage,
                        previousPage: previousPage, lastPage: lastPage}) %>


                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>