<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(products.length> 0) { %>

                    <form action="/create-order" method="POST" class="checkout_btn-container">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn checkout_btn">Order Now!</button>
                    </form>

                    <ul class="cart_item-container">
                        <% products.forEach(prod=> { %>
                            <li class="cart_item">
                                <a href="/products/<%= prod.productId._id %>">
                                    <div class="item_detail">

                                        <img class="item_img" src="/<%= prod.productId.imageUrl %>"
                                            alt="<%= prod.productId.title %>">
                                        <h4 class="item_title">
                                            <%= prod.productId.title %>
                                        </h4>
                                    </div>
                                </a>
                                <h3>
                                    Quantity: <%= prod.quantity %>
                                </h3>
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" value="<%= prod.productId._id %>" name="productId">
                                    <button class="btn delete-btn" type="submit" cla>Delete</button>
                                </form>

                            </li>
                            <%}) %>
                    </ul>

                    <% } else { %>
                        <h1>No products in cart</h1>
                        <% } %>
            </main>

            <%- include('../includes/end.ejs') %>