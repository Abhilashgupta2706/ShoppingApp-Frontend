<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>

                <% if(errorMessage.length>0) { %>
                    <div class="user-message user-message--error">
                        <%= errorMessage%>
                    </div>
                    <% } %>

                        <form class="login-form" action="/login" method="POST" novalidate>

                            <div class="form-control">
                                <label for="email">E-Mail</label>
                                <input
                                    class="<%= validationErrors.find(e => e.param === 'email') ?  'invalidInput' :null %>"
                                    type="email" name="email" id="email" value="<%= oldInputData.email %>">
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input
                                    class="<%= validationErrors.find(e => e.param === 'password') ?  'invalidInput' :null %>"
                                    type="password" name="password" id="password" value="<%= oldInputData.password %>">
                            </div>


                            <div class="action-btns">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">
                                    Login
                                </button>

                                <a href="/reset">Reset Password </a>
                            </div>
                        </form>

            </main>
            <%- include('../includes/end.ejs') %>